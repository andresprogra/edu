<div class="container"> 
  <table class="table table-striped table-hover ">
    <thead>
    <tr>
      <th>ID</th>
      <th>Matr√≠cula</th>
      <th>Nombre completo</th>
      <th>Semestre</th>
      <th>Grupo</th>
      <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
      <%@user.each do |user|%>
        <tr class="info">
          <td><%=user.id%></td>
          <td><%=user.matricula%></td>
          <td><%=user.name + " " + user.apellido%></td>
          <td><%=user.semestre%></td>
          <td><%=user.grupo%></td>
          <td><%=link_to "Editar", edit_user_path(user.id)%> - <%=link_to "Eliminar", { action: :destroy, id: user.id }, method: :delete%></td>
        </tr>
      <%end%>
   
    </tr>
    </tbody>
  </table>
</div>