<div class="container">
  <div class="well col-xs-12 col-md-6 col-md-offset-3">
    <h2>Editar <%= @user.name%></h2>
    
    <%= form_for(@user) do |f| %>
      
      <div class="field">
        <%= f.label :matricula, "Matricula" %><br />
        <%= f.text_field :matricula, autofocus: true,class:"form-control input-lg" %>
      </div>
      <div class="field">
        <%= f.label :name, "Nombre" %><br />
        <%= f.text_field :name, autofocus: true,class:"form-control input-lg" %>
      </div>
      

      <div class="field">
        <%= f.label :apellido %><br />
        <%= f.text_field :apellido, autofocus: true,class:"form-control input-lg" %>
      </div>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true,class:"form-control input-lg" %>
      </div>
    
      
      

      <div class="field col-xs-6">
          <div>
              <%= f.label :semestre %>
              <%#= f.select :semestre, [['horrible', 1], ['poor', 2], ['mediocre', 3], ['good', 4], ['great', 5]], :class => 'my_style_class'  %>
              
              <%= f.select(:semestre, ['Primero', 'Segundo', 'Tercero', 'Cuarto', 'Quinto', 'Sexto']) %>
            </div>
      </div>  
      <div class="field col-xs-6">
        <%= f.label :grupo %>
        <%= f.select(:grupo, ['A', 'B', 'C', 'D', 'E', 'F']) %>
      </div>

      <div class="fiel">
        <%= f.label :carrera%>
        <%= f.select(:carrera, ['Agropecuario', 'ProgramaciÃ³n']) %>
      </div>
        
      <div class="field">
        <%=f.label :cargo%>
        <%=f.select(:cargo, [['Alumno', 1],['Docente', 0],['Administrativo',0],['Tutor',2]])%>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: "btn btn-raised btn-primary" %>
      </div>
    <% end %>
    
    
    
    <!--<%= link_to "Back", :back %>-->
  </div>
</div>